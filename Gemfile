# Gemfile for menofgod-site
# Compatible with Ruby 3.3 - 3.4, Jekyll 4.4.1, Minima 2.5.2

ruby "~> 3.2"

source "https://rubygems.org"

# Core Jekyll
gem "jekyll", "~> 4.4"

# Jekyll plugins
gem "jekyll-feed", "~> 0.16"
gem "jekyll-seo-tag", "~> 2.8"

# Default theme
gem "minima", "2.5.2"

# Ensure standard library dependencies for Ruby 3.x
gem "csv", "~> 3.2"
gem "logger", "~> 1.6"

# Windows-specific support for Jekyll
gem "wdm", "~> 0.2.0", :platforms => :windows
